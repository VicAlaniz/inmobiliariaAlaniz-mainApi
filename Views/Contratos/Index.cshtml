@model IEnumerable<InmobiliariaAlaniz.Models.Contrato>

@{
    ViewData["Title"] = "Contratos";
}

<h1>Men√∫</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInmueble)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdInquilino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @(item.Inmueble.Direccion)
            </td>
            <td>
                @(item.Inquilino.Apellido+", "+item.Inquilino.Nombre)
            </td>
            <td>
                @(item.FechaInicio.Date.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @(item.FechaFin.Date.ToString("dd/MM/yyyy"))
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id=item.Id })
                
            </td>
        </tr>
}
    </tbody>
</table>

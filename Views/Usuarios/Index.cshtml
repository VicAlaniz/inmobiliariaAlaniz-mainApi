@model IEnumerable<InmobiliariaAlaniz.Models.Usuario>

@{
    ViewData["Title"] = "Menú";
}

<h1>Menú</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
          
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rol)
            </th>
         
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RolesName)
            </td>
            <td>
           @if (String.IsNullOrEmpty(item.Avatar)) {
            <img src="/media/img/avatar.png" height="60" alt="Imagen"/>
           }
           else {
            <img src="@item.Avatar" height="60" alt="Imagen"/>
           }
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Detalle", "Details", new { id=item.Id }) |
                @if (User.IsInRole("Administrador"))
                    {
                        <label>|</label>
                        @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
                    }
 
            </td>
        </tr>
}
    </tbody>
</table>
